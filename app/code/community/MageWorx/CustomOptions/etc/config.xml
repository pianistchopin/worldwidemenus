<config>
    <modules>
        <MageWorx_CustomOptions>
            <version>4.17.8</version>
        </MageWorx_CustomOptions>
    </modules>
    
    <frontend>
        <translate>
            <modules>
                <MageWorx_CustomOptions>
                    <files>
                        <default>MageWorx_CustomOptions.csv</default>
                    </files>
                </MageWorx_CustomOptions>
            </modules>
        </translate>
        <routers>
            <mageworx_customoptions>
                <use>standard</use>
                <args>
                    <module>MageWorx_CustomOptions</module>
                    <frontName>mageworx_customoptions</frontName>
                </args>
            </mageworx_customoptions>
        </routers>
        <layout>
            <updates>
                <mageworx_customoptions>
                    <file>mageworx_customoptions.xml</file>
                </mageworx_customoptions>
            </updates>
        </layout>
        <events>
            <sales_order_save_after>
                <observers>
                    <mageworx_customoptions>
                        <class>mageworx_customoptions/observer</class>
                        <method>orderSaveAfter</method>
                    </mageworx_customoptions>
                </observers>
            </sales_order_save_after>
            <core_block_abstract_to_html_before>
                <observers>
                    <mageworx_customoptions>
                        <class>mageworx_customoptions/observer</class>
                        <method>toHtmlBlockFrontBefore</method>
                    </mageworx_customoptions>
                </observers>
            </core_block_abstract_to_html_before>
            <core_block_abstract_to_html_after>
                <observers>
                    <mageworx_customoptions>
                        <class>mageworx_customoptions/observer</class>
                        <method>toHtmlBlockFrontAfter</method>
                    </mageworx_customoptions>
                </observers>
            </core_block_abstract_to_html_after>
            <catalog_product_collection_load_before>
                <observers>
                    <mageworx_customoptions>
                        <class>mageworx_customoptions/observer</class>
                        <method>catalogProductCollectionLoadBefore</method>
                    </mageworx_customoptions>
                </observers>
            </catalog_product_collection_load_before>
            <catalog_product_collection_load_after>
                <observers>
                    <mageworx_customoptions>
                        <class>mageworx_customoptions/observer</class>
                        <method>catalogProductCollectionLoadAfter</method>
                    </mageworx_customoptions>
                </observers>
            </catalog_product_collection_load_after>
            
            <heidelpay_payment_controller_cancel_action>
                <observers>
                    <mageworx_customoptions>
                        <class>mageworx_customoptions/observer</class>
                        <method>heidelpayPaymentCancel</method>
                    </mageworx_customoptions>
                </observers>
            </heidelpay_payment_controller_cancel_action>
        </events>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <MageWorx_CustomOptions after="Mage_Adminhtml">MageWorx_CustomOptions_Adminhtml</MageWorx_CustomOptions>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <global>
        <events>
            <sales_order_creditmemo_refund>
                <observers>
                    <mageworx_customoptions>
                        <class>mageworx_customoptions/observer</class>
                        <method>creditMemoRefund</method>
                    </mageworx_customoptions>
                </observers>
            </sales_order_creditmemo_refund>
            <sales_order_item_cancel>
                <observers>
                    <mageworx_customoptions>
                        <class>mageworx_customoptions/observer</class>
                        <method>cancelOrderItem</method>
                    </mageworx_customoptions>
                </observers>
            </sales_order_item_cancel>
            
            <sales_quote_item_qty_set_after>
                <observers>
                    <mageworx_customoptions>
                        <class>mageworx_customoptions/observer</class>
                        <method>checkQuoteItemQtyAndCustomerGroup</method>
                    </mageworx_customoptions>
                </observers>
            </sales_quote_item_qty_set_after>
                                    
            <sales_convert_quote_item_to_order_item>
                <observers>
                    <mageworx_customoptions>
                        <class>mageworx_customoptions/observer</class>
                        <method>convertQuoteItemToOrderItem</method>
                    </mageworx_customoptions>
                </observers>
            </sales_convert_quote_item_to_order_item>    
            
            <sales_model_service_quote_submit_after>
                <observers>
                    <mageworx_customoptions>
                        <class>mageworx_customoptions/observer</class>
                        <method>quoteSubmitSuccess</method>
                    </mageworx_customoptions>
                </observers>
            </sales_model_service_quote_submit_after>
            
            <sales_quote_item_set_product>
                <observers>
                    <mageworx_customoptions>
                        <class>mageworx_customoptions/observer</class>
                        <method>quoteItemSetProduct</method>
                    </mageworx_customoptions>
                </observers>
            </sales_quote_item_set_product>
            
            <sales_quote_product_add_after>
                <observers>
                    <mageworx_customoptions>
                        <class>mageworx_customoptions/observer</class>
                        <method>quoteProductAddAfter</method>
                    </mageworx_customoptions>
                </observers>
            </sales_quote_product_add_after>
            
            <sales_order_item_collection_load_before>
                <observers>
                    <mageworx_customoptions>
                        <class>mageworx_customoptions/observer</class>
                        <method>orderItemsLoadBefore</method>
                    </mageworx_customoptions>
                </observers>
            </sales_order_item_collection_load_before>
            
            <sales_order_item_collection_load_after>
                <observers>
                    <mageworx_customoptions>
                        <class>mageworx_customoptions/observer</class>
                        <method>orderItemsLoadAfter</method>
                    </mageworx_customoptions>
                </observers>
            </sales_order_item_collection_load_after>  
            
            <sales_quote_add_item>
                <observers>
                    <mageworx_customoptions_stock>
                        <class>mageworx_customoptions/observer_stock</class>
                        <method>addToCartCheckProductOptionsQty</method>
                    </mageworx_customoptions_stock>
                </observers>
            </sales_quote_add_item>
            <sales_quote_item_qty_set_after>
                <observers>
                    <mageworx_customoptions_stock>
                        <class>mageworx_customoptions/observer_stock</class>
                        <method>checkProductOptionsQty</method>
                    </mageworx_customoptions_stock>
                </observers>
            </sales_quote_item_qty_set_after>
            
            <catalog_product_save_before>
                <observers>
                    <mageworx_customoptions>
                        <class>mageworx_customoptions/observer</class>
                        <method>updateLinkedOptionValues</method>
                    </mageworx_customoptions>
                </observers>
            </catalog_product_save_before>

            <catalog_product_type_prepare_full_options>
                <observers>
                    <mageworx_customoptions>
                        <class>mageworx_customoptions/observer</class>
                        <method>updateInfoBuyRequest</method>
                    </mageworx_customoptions>
                </observers>
            </catalog_product_type_prepare_full_options>
        </events>
        <models>
            <mageworx_customoptions>
                <class>MageWorx_CustomOptions_Model</class>
                <resourceModel>mageworx_customoptions_mysql4</resourceModel>
            </mageworx_customoptions>
            <mageworx_customoptions_mysql4>
                <class>MageWorx_CustomOptions_Model_Mysql4</class>
                <entities>
                    <group>
                        <table>mageworx_custom_options_group</table>
                    </group>
                    <group_store>
                        <table>mageworx_custom_options_group_store</table>
                    </group_store>
                    <relation>
                        <table>mageworx_custom_options_relation</table>
                    </relation>
                    <option_view_mode>
                        <table>mageworx_custom_options_option_view_mode</table>
                    </option_view_mode>                   
                    <option_description>
                        <table>mageworx_custom_options_option_description</table>
                    </option_description>
                    <option_default>
                        <table>mageworx_custom_options_option_default</table>
                    </option_default>
                    <option_type_special_price>
                        <table>mageworx_custom_options_option_type_special_price</table>
                    </option_type_special_price>
                    <option_type_tier_price>
                        <table>mageworx_custom_options_option_type_tier_price</table>
                    </option_type_tier_price>
                    <option_type_image>
                        <table>mageworx_custom_options_option_type_image</table>
                    </option_type_image>
                    <option_type_description>
                        <table>mageworx_custom_options_option_type_description</table>
                    </option_type_description>
                    <product_entity_varchar>
                        <table>catalog_product_entity_varchar</table>
                    </product_entity_varchar>
                </entities>
            </mageworx_customoptions_mysql4>
            
            <catalog>
                <rewrite>
                    <product_option>MageWorx_CustomOptions_Model_Catalog_Product_Option</product_option>
                    
                    <product_type_price>MageWorx_CustomOptions_Model_Catalog_Product_Type_Price</product_type_price>
                    <product_type_configurable_price>MageWorx_CustomOptions_Model_Catalog_Product_Type_Configurable_Price</product_type_configurable_price>
                    <product_option_type_select>MageWorx_CustomOptions_Model_Catalog_Product_Option_Type_Select</product_option_type_select>
                    <product_option_type_text>MageWorx_CustomOptions_Model_Catalog_Product_Option_Type_Text</product_option_type_text>
                </rewrite>
            </catalog>            
            <reports_resource>
                <rewrite>
                    <order_collection>MageWorx_CustomOptions_Model_Mysql4_Reports_Order_Collection</order_collection>
                </rewrite>
            </reports_resource>
            <catalog_resource_eav_mysql4>
                <rewrite>
                    <product_option_value>MageWorx_CustomOptions_Model_Mysql4_Product_Option_Value</product_option_value>
                    <product_option_value_collection>MageWorx_CustomOptions_Model_Mysql4_Product_Option_Value_Collection</product_option_value_collection>
                    <product_indexer_price_default>MageWorx_CustomOptions_Model_Mysql4_Product_Indexer_Price_Default</product_indexer_price_default>
                    <product_indexer_price_configurable>MageWorx_CustomOptions_Model_Mysql4_Product_Indexer_Price_Configurable</product_indexer_price_configurable>
                </rewrite>
            </catalog_resource_eav_mysql4>
            <importexport>
                <rewrite>
                    <export_entity_product>MageWorx_CustomOptions_Model_Importexport_Export_Entity_Product</export_entity_product>
                    <import_entity_product>MageWorx_CustomOptions_Model_Importexport_Import_Entity_Product</import_entity_product>
                </rewrite>
            </importexport>
            <adminhtml>
                <rewrite>
                    <system_config_source_product_options_price>MageWorx_CustomOptions_Model_Adminhtml_System_Config_Source_Product_Options_Price</system_config_source_product_options_price>
                </rewrite>
            </adminhtml>
        </models>
        <catalog>
            <product>
                <type>
                    <downloadable translate="label" module="downloadable">
                    	<price_model>MageWorx_CustomOptions_Model_Catalog_Product_Type_Downloadable_Price</price_model>
                    </downloadable>	
                </type>
            </product>
        </catalog>
        <resources>
            <mageworx_customoptions_setup>
                <setup>
                    <module>MageWorx_CustomOptions</module>
                    <class>Mage_Sales_Model_Mysql4_Setup</class>
                </setup>
            </mageworx_customoptions_setup>
            <mageworx_customoptions_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </mageworx_customoptions_write>
            <mageworx_customoptions_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </mageworx_customoptions_read>
        </resources>
        <blocks>
            <mageworx_customoptions>
                <class>MageWorx_CustomOptions_Block</class>
            </mageworx_customoptions>
            <catalog>
                <rewrite>
                    <product_view_options_type_select>MageWorx_CustomOptions_Block_Catalog_Product_View_Options_Type_Select</product_view_options_type_select>
                </rewrite>
            </catalog>
            <adminhtml>
                <rewrite>
                    <catalog_product_edit_tab_options>MageWorx_CustomOptions_Block_Adminhtml_Catalog_Product_Edit_Tab_Options</catalog_product_edit_tab_options>
                    <catalog_product_edit_tab_options_option>MageWorx_CustomOptions_Block_Adminhtml_Catalog_Product_Edit_Tab_Options_Option</catalog_product_edit_tab_options_option>
                    <catalog_product_edit_tab_options_type_select>MageWorx_CustomOptions_Block_Adminhtml_Catalog_Product_Edit_Tab_Options_Type_Select</catalog_product_edit_tab_options_type_select>
                    <catalog_product_edit_tab_options_type_text>MageWorx_CustomOptions_Block_Adminhtml_Catalog_Product_Edit_Tab_Options_Type_Text</catalog_product_edit_tab_options_type_text>
                    <catalog_product_edit_tab_options_type_date>MageWorx_CustomOptions_Block_Adminhtml_Catalog_Product_Edit_Tab_Options_Type_Date</catalog_product_edit_tab_options_type_date>
                    <catalog_product_edit_tab_options_type_file>MageWorx_CustomOptions_Block_Adminhtml_Catalog_Product_Edit_Tab_Options_Type_File</catalog_product_edit_tab_options_type_file>
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <mageworx_customoptions>
                <class>MageWorx_CustomOptions_Helper</class>
            </mageworx_customoptions>
            <catalog>
                <rewrite>
                    <product_configuration>MageWorx_CustomOptions_Helper_Product_Configuration</product_configuration>
                </rewrite>
            </catalog>
            <sales>
                <rewrite>
                    <reorder>MageWorx_CustomOptions_Helper_Sales_Reorder</reorder>
                </rewrite>
            </sales>            
        </helpers>
        <sales>
            <quote>
                <totals>
                    <mageworx_customoptions>
                        <class>mageworx_customoptions/sales_quote_total</class>
                        <after>grand_total,tax,subtotal</after>
                        <before>customercredit</before>
                    </mageworx_customoptions>
                </totals>
            </quote>          
        </sales>
        <catalog>
            <product>
                <options>
                    <custom>
                        <groups>
                            <select>
                                <types>
                                    <swatch translate="label" module="mageworx_customoptions">
                                        <label>Swatch</label>
                                    </swatch>
                                    <multiswatch translate="label" module="mageworx_customoptions">
                                        <label>Swatch Multiselect</label>
                                    </multiswatch>
                                    <hidden translate="label" module="mageworx_customoptions">
                                        <label>Hidden</label>
                                    </hidden>
                                </types>
                            </select>
                        </groups>
                    </custom>
                </options>
            </product>
        </catalog>
    </global>
    
    <adminhtml>
         <translate>
            <modules>
                <MageWorx_CustomOptions>
                    <files>
                        <default>MageWorx_CustomOptions.csv</default>
                    </files>
                </MageWorx_CustomOptions>
            </modules>
        </translate>
        <events>
            <adminhtml_block_html_before>
                <observers>
                    <mageworx_customoptions>
                        <class>mageworx_customoptions/observer</class>
                        <method>toHtmlBlockAdminBefore</method>
                    </mageworx_customoptions>
                </observers>
            </adminhtml_block_html_before>
        </events>
        <layout>
            <updates>
                <mageworx_customoptions>
                    <file>mageworx_customoptions.xml</file>
                </mageworx_customoptions>
            </updates>
        </layout>
    </adminhtml>

    <default>
        <mageworx_customoptions>
            <main>
                <enabled>1</enabled>
                <dependent_enabled>0</dependent_enabled>
                <hide_dependent_option>0</hide_dependent_option>
                <weight_enabled>0</weight_enabled>
                <cost_enabled>0</cost_enabled>
                <price_prefix_enabled>0</price_prefix_enabled>
                <special_price_enabled>0</special_price_enabled>
                <special_price_date_enabled>0</special_price_date_enabled>
                <tier_price_enabled>0</tier_price_enabled>
                <assigned_product_attributes>5</assigned_product_attributes>
                <option_description_enabled>0</option_description_enabled>
                <description_edit_mode>1</description_edit_mode>
                <option_variation_description_enabled>0</option_variation_description_enabled>
                <option_sku_policy_enabled>0</option_sku_policy_enabled>
                <option_sku_policy_default>1</option_sku_policy_default>
                <option_sku_policy_apply>1</option_sku_policy_apply>
                <inventory_enabled>0</inventory_enabled>
                <set_product_out_of_stock>0</set_product_out_of_stock>
                <display_qty_for_options>0</display_qty_for_options>
                <hide_out_of_stock_options>0</hide_out_of_stock_options>
                <display_low_stock_message>0</display_low_stock_message>
                <low_stock_value>0</low_stock_value>
                <enable_extras>0</enable_extras>
                <enable_qnty_input>0</enable_qnty_input>
                <default_option_qty_label>Qty:</default_option_qty_label>
                <show_qty_per_option_in_cart>1</show_qty_per_option_in_cart>
                <minimum_qty_allowed_in_shopping_cart>0</minimum_qty_allowed_in_shopping_cart>
                <maximum_qty_allowed_in_shopping_cart>0</maximum_qty_allowed_in_shopping_cart>
                <enable_default_text>0</enable_default_text>
                <enable_specifying_css_class>0</enable_specifying_css_class>
                <enable_customer_groups>0</enable_customer_groups>
                <enable_store_views>0</enable_store_views>
                <images_thumbnails_size>70</images_thumbnails_size>
                <enable_image_mode>0</enable_image_mode>
                <images_above_options>1</images_above_options>
                <upc_enabled>0</upc_enabled>
            </main>
        </mageworx_customoptions>
    </default>
</config>
