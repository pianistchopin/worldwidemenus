<config>
    <sections>
        <qquoteadv_quote_emails>
            <tab>qquoteadv</tab>
            <groups>
                <sales_representatives>
                    <fields>
                        <send_quote_request_notification_to translate="label">
                            <label>Send Quote e-mail notification to:</label>
                            <frontend_type>text</frontend_type>
                            <comment>Separate by ";".</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <sort_order>25</sort_order>
                            <tooltip><![CDATA[<input type="hidden" value="211216423" class="article_id"/>]]></tooltip>
                        </send_quote_request_notification_to>
                    </fields>
                </sales_representatives>
                <templates>
                    <fields>
                        <quote_request_notification>
                            <label>New Request notification Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>qquoteadv/system_config_source_email_templatedisable</source_model>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select email to be sent.</comment>
                        </quote_request_notification>
                    </fields>
                </templates>
            </groups>
        </qquoteadv_quote_emails>
    </sections>
</config>
