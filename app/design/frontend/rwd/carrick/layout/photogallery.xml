	<photogallery_view_index>
		 <reference name="head">
			<!-- <action method="addJs"><script>fmegallery/script/jquery-1.8.3.min.js</script></action> -->
			 <action method="addCss"><stylesheet>css/fmegallery/cubeportfoliocss.css</stylesheet></action>	
				
			
